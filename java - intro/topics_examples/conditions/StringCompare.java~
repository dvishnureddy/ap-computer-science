public class StringCompare
{
     public static void main (String args[])
     {
          String word1 = new String ("Harry Potter");
          String word2 = new String ("Harry Potter");
          String word3 = word1.toUpperCase ();
          
          //if (word1 == word2)  COMPARES THE MEMORY ADRESSES (THAT"S BAD)
          if (word1.equals (word3))
          
               System.out.println ("they are equal");
          else if (word1.equalsIgnoreCase (word3))
               System.out.println ("The words are equal, but different cases");
               
     }//end main method
}//end StringCompare class