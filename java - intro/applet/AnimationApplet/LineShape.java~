/**
 * Create a line we can animate in AnimationApplet
 */
import java.awt.*;
import java.awt.geom.*;

public class LineShape
{
     private Line2D.Double line;
     
     private int x1, x2, y1, y2;
     
     private int x1Run, x1Dir, y1Rise, y1Dir, x2Run, x2Dir, y2Rise, y2Dir;
     
     public LineShape (int xO, int yO, int xT, int yT, int x1R, int x1D, int y1R, int y1D, int x2R, int x2D, int y2R, int y2D)
     {
          x1 = xO;
          y1 = yO;
          x2 = xT;
          y2 = yT;
          x1Run = x1R;
          y1Rise = y1R;
          x1Dir = x1D;
          y1Dir = y1D;
          x2Run = x2R;
          y2Rise = y2R;
          x2Dir = x2D;
          y2Dir = y2D;
          
          line = new Line2D.Double (x1, y1, x2, y2);
     }//end LineShape
     
     public Line2D.Double getLine ()
     {
          return line;
     }
     
     public void setLine ()
     {
          line.setLine (x1, y1, x2, y2);
     }        
     
     //accessor method
     public int getX1 ()
     {
          return x1;
     }
     
     //mutator method
     public void setX1 (int newX1)
     {
          x1 = newX1;
     }
     
     //accessor method
     public int getY1 ()
     {
          return y1;
     }
     
     //mutator method
     public void setY1 (int newY1)
     {
          y1 = newY1;
     }
     
     //accessor method
     public int getX2 ()
     {
          return x2;
     }
     
     //mutator method
     public void setX2 (int newX2)
     {
          x2 = newX2;
     }
     
     //accessor method
     public int getY2 ()
     {
          return y2;
     }
     
     //mutator method
     public void setY2 (int newY2)
     {
          y2 = newY2;
     }
     
     //accessor method
     public int getX1Run ()
     {
          return x1Run;
     }
     
     //mutator method
     public void setX1Run (int newX1Run)
     {
          x1Run = newX1Run;
     }
     
     //accessor method
     public int getY1Rise ()
     {
          return y1Rise;
     }
     
     //mutator method
     public void setY1Rise (int newY1Rise)
     {
          y1Rise = newY1Rise;
     }
     
     //accessor method
     public int getX2Run ()
     {
          return x2Run;
     }
     
     //mutator method
     public void setX2Run (int newX2Run)
     {
          x2Run = newX2Run;
     }
     
     //accessor method
     public int getY2Rise ()
     {
          return y2Rise;
     }
     
     //mutator method
     public void setY2Rise (int newY2Rise)
     {
          y2Rise = newY2Rise;
     }
     
     //accessor method
     public int getX1Dir ()
     {
          return x1Dir;
     }
     
     //mutator method
     public void switchX1Dir (int newX1Dir)
     {
          x1Dir = newX1Dir;
     }
     
     //accessor method
     public int getY1Dir ()
     {
          return y1Dir;
     }
     
     //mutator method
     public void switchY1Dir (int newY1Dir)
     {
          y1Dir = newY1Dir;
     }
     
     //accessor method
     public int getX2Dir ()
     {
          return x2Dir;
     }
     
     //mutator method
     public void switchX2Dir (int newX2Dir)
     {
          x2Dir = newX2Dir;
     }
     
     //accessor method
     public int getY2Dir ()
     {
          return y2Dir;
     }
     
     //mutator method
     public void switchY2Dir (int newY2Dir)
     {
          y2Dir = newY2Dir;
     }     
}//end LineShape